@{
    ViewData["Title"] = "Dad Day Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Father's Day Questionnaire</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <style>
        body {
            background-color: #ccddef;
        }

        .container {
            max-width: 960px;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            font-weight: bold;
            color: #555c62;
        }

        .form-group input {
            border: 1px solid #555c62;
            border-radius: .25rem;
        }

        #cardDiv {
            display: none;
        }

        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            transition: 0.3s;
        }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        }

        .header-box {
            padding: .5rem 1rem;
            background-color: rgba(0, 0, 0, .03);
            border-radius: 10px;
        }

        .header-53 {
            background-color: #3DD1E7;
            border: 0 solid #E5E7EB;
            box-sizing: border-box;
            color: #000000;
            display: flex;
            font-family: ui-sans-serif, system-ui, -apple-system, system-ui, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
            font-size: 1rem;
            font-weight: 700;
            justify-content: center;
            line-height: 1.75rem;
            padding: .75rem 1.65rem;
            position: relative;
            text-align: center;
            text-decoration: none #000000 solid;
            text-decoration-thickness: auto;
            width: 100%;
            max-width: 460px;
            position: relative;
            transform: rotate(+1deg);
        }
        .header-53:after {
            content: '';
            position: absolute;
            border: 1px solid #000000;
            bottom: 4px;
            left: 4px;
            width: calc(100% - 1px);
            height: calc(100% - 1px);
        }

        .button-53 {
            background-color: #3DD1E7;
            border: 0 solid #E5E7EB;
            box-sizing: border-box;
            color: #000000;
            display: flex;
            font-family: ui-sans-serif, system-ui, -apple-system, system-ui, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
            font-size: 1rem;
            font-weight: 700;
            justify-content: center;
            line-height: 1.75rem;
            padding: .75rem 1.65rem;
            position: relative;
            text-align: center;
            text-decoration: none #000000 solid;
            text-decoration-thickness: auto;
            width: 100%;
            max-width: 460px;
            position: relative;
            cursor: pointer;
            transform: rotate(-2deg);
            user-select: none;
            -webkit-user-select: none;
            touch-action: manipulation;
        }

        .button-53:focus {
            outline: 0;
        }

        .button-53:after {
            content: '';
            position: absolute;
            border: 1px solid #000000;
            bottom: 4px;
            left: 4px;
            width: calc(100% - 1px);
            height: calc(100% - 1px);
        }

        .button-53:hover:after {
            bottom: 2px;
            left: 2px;
        }

    </style>
</head>
<body>
<div class="container mt-5" style="font-family: 'Comic Sans MS',cursive;">
    <div id="formDiv">
        <div class="d-flex m-md-4">
            <div class="col-8 col-md-4">
                <img style="max-width: 100%" src="~/father-son-stars.webp" alt="image depicting a father and son as a silhouette composed of dark night sky with stars"/>
            </div>
            <div class="col-12 col-md-6">
                <p class="header-53 mt-2 mt-md-4">Answer any number of questions & click submit. Then use browser print function to print or save as pdf</p>
            </div>
        </div>
        <div class="my-2 my-md-4 p-2">
            <form id="fatherForm">
                <div class="form-group">
                    <label for="q1">My Daddy’s name is:</label>
                    <input type="text" class="form-control" id="q1">
                </div>
                <div class="form-group">
                    <label for="q2">He is ______ years old:</label>
                    <input type="text" class="form-control" id="q2">
                </div>
                <div class="form-group">
                    <label for="q3">Our favorite thing to do together is:</label>
                    <input type="text" class="form-control" id="q3">
                </div>
                <h4>Dad...</h4>
                <div class="form-group">
                    <label for="q4">I love it when you tell stories about:</label>
                    <input type="text" class="form-control" id="q4">
                </div>
                <div class="form-group">
                    <label for="q5">You deserve the:</label>
                    <input type="text" class="form-control" id="q5">
                </div>
                <div class="form-group">
                    <label for="q6">I know you are the happiest when:</label>
                    <input type="text" class="form-control" id="q6">
                </div>
                <div class="form-group">
                    <label for="q7">I was very proud when you:</label>
                    <input type="text" class="form-control" id="q7">
                </div>
                <div class="form-group">
                    <label for="q8">I tell my friends you are super awesome because:</label>
                    <input type="text" class="form-control" id="q8">
                </div>
                <div class="form-group">
                    <label for="q9">I know you love me because:</label>
                    <input type="text" class="form-control" id="q9">
                </div>
                <div class="form-group">
                    <label for="q10">You are a superhero just like:</label>
                    <input type="text" class="form-control" id="q10">
                </div>
                <div class="form-group">
                    <label for="q11">You are so much fun when you:</label>
                    <input type="text" class="form-control" id="q11">
                </div>
                <div class="form-group">
                    <label for="q12">My favorite thing to do with you is:</label>
                    <input type="text" class="form-control" id="q12">
                </div>
                <div class="form-group">
                    <label for="q12">I love you because:</label>
                    <input type="text" class="form-control" id="q13">
                </div>
                <div class="form-group">
                    <label for="q14">His favorite thing to do is:</label>
                    <input type="text" class="form-control" id="q14">
                </div>
                <div class="form-group">
                    <label for="q15">Your favorite food is:</label>
                    <input type="text" class="form-control" id="q15">
                </div>
                <div class="form-group">
                    <label for="q16">You always make me laugh when you:</label>
                    <input type="text" class="form-control" id="q16">
                </div>
                <div class="form-group">
                    <label for="q17">I like it when you help me with:</label>
                    <input type="text" class="form-control" id="q17">
                </div>
                <div class="form-group">
                    <label for="q18">You are really good at:</label>
                    <input type="text" class="form-control" id="q18">
                </div>
                <div class="form-group">
                    <label for="q19">I know you are mad when:</label>
                    <input type="text" class="form-control" id="q19">
                </div>
                <div class="form-group">
                    <label for="q20">If I could give you anything, it would be:</label>
                    <input type="text" class="form-control" id="q20">
                </div>
            </form>
        </div>
        <div class="row justify-content-center my-2 my-md-4">
            <button type="button" class="button-53" onclick="displayCards()">Submit</button>
        </div>
    </div>

    <div id="cardDiv" class="mt-5">
        <div class="m-2 m-md-4">
            <h2>Dear Dad...</h2>
        </div>
        <div class="row" id="cardContainer">
            <!-- Cards will be appended here by JavaScript -->
        </div>
        <div class="row flex-row text-end m-2 m-md-4">
            <h4>
                <em>Father's Day 2024</em>
            </h4>
        </div>
    </div>
</div>

<script>
    function displayCards() {
        const questions = [
            "My Daddy’s name is",
            "He is ______ years old",
            "Our favorite thing to do together is",
            "I love it when you tell stories about",
            "You deserve the",
            "I know you are the happiest when",
            "I was very proud when you",
            "I tell my friends you are super awesome because",
            "I know you love me because",
            "You are a superhero just like",
            "You are so much fun when you",
            "My favorite thing to do with you is",
            "I love you because",
            "His favorite thing to do is",
            "Your favorite food is",
            "You always make me laugh when you",
            "I like it when you help me with",
            "You are really good at",
            "I know you are mad when",
            "If I could give you anything, it would be"
        ];

        let cardContainer = document.getElementById('cardContainer');
        cardContainer.innerHTML = '';

        questions.forEach((question, index) => {
            let answer = document.getElementById('q' + (index + 1)).value;
            if (!answer) {
                return;
            }
            let cardText = index === 1 ? `He is ${answer} years old.` : `${question} ${answer}.`;
            let card = document.createElement('div');
            card.className = 'col-md-4 mb-3';
            card.innerHTML = `
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text">${cardText}</p>
                        </div>
                    </div>
                `;
            cardContainer.appendChild(card);
        });

        document.getElementById('formDiv').style.display = 'none';
        document.getElementById('cardDiv').style.display = 'block';
    }
</script>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>